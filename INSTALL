sudo mkdir /opt/milla
sudo cp -av ../Desktop-Release/bin /opt/milla/
sudo cp -av ../Desktop-Release/share /opt/milla/
sudo mkdir /opt/milla/share/icons
sudo cp -av milla-view/milla*.png /opt/milla/share/icons/
mkdir ~/.local/share/applications
cp -av milla-view/milla-image-viewer.desktop ~/.local/share/applications/
update-desktop-database ~/.local/share/applications
